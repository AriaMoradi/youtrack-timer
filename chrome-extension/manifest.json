{
  "content_scripts": [
    {
      "js": [
        "js/api.js",
        "js/content-script.js"
      ],
      "matches": [
        "https://*.youtrack.cloud/*"
      ],
      "css": []
    }
  ],
  "description": "Allows to track YouTrack time via button.",
  "icons": {
    "128": "images/h-app@128px.png",
    "16": "images/h-app@16px.png",
    "48": "images/h-app@48px.png"
  },
  "manifest_version": 3,
  "name": "YouTrack Time Tracker",
  "permissions": [
    "https://*.youtrack.cloud/*",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "1.0.1"
}
